{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "outDir": "build/server/"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "server/**/*.ts",
    "common-types/**/*.ts"
  ]
}
